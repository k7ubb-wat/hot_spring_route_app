{
	"name": "your-project-name",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run watch\" \"npm run serve\" \"npm run css:watch\"",
		"serve": "http-server dist -p 3000 -a localhost",
		"watch": "node build.js --dev",
		"build": "concurrently \"npm run js:build\" \"npm run css:build\"",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"js:build": "node build.js",
		"css:build": "npx @tailwindcss/cli -i public/style.css -o dist/style.css",
		"css:watch": "npx @tailwindcss/cli -i public/style.css -o dist/style.css --watch"
	},
	"devDependencies": {
		"@eslint/js": "^9.36.0",
		"@tailwindcss/cli": "^4.1.13",
		"@types/leaflet": "^1.9.20",
		"@types/node": "^24.5.2",
		"concurrently": "^9.2.1",
		"esbuild": "^0.25.10",
		"eslint": "^9.36.0",
		"fs-extra": "^11.3.2",
		"globals": "^16.4.0",
		"http-server": "^14.1.1",
		"typescript": "^5.9.2"
	},
	"dependencies": {
		"leaflet": "^1.9.4"
	}
}
